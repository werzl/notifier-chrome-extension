{
    "manifest_version": 3,
    "name": "Notifier",
    "description": "Notify when pipelines / pull requests complete on popular cloud platforms.",
    "version": "1.1.4",
    "action": {
        "default_popup": "action/index.html",
        "default_icon": "icon.png"
    },
    "permissions": ["notifications"],
    "background": {
        "service_worker": "worker.js",
        "persistent": false
    }
}
